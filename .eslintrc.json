{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "plugins": [
    "@babel"
  ],
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ],
  "globals" : {
    "THREE" : true,
    "CSG" : true,
    "PNLTRI" : true,
    "__DEBUG__": true,
    "__CAD_APP": true,
    "Module": true,
    "_free": true,
    "_malloc": true,
    "writeAsciiToMemory": true,
    "__E0_ENGINE_EXCHANGE_VAL": true,
    "verb": true,
    "$": true
  },
  "rules": {
    "comma-dangle": "off",
    "no-unused-vars": "off",
    "max-len": "off",
    "no-console": "off",
    "no-extra-boolean-cast": "off"
  },
  "ignorePatterns": [
    "/modules/math/optim/*.js",
    "/modules/math/qr.js"
  ]
}
